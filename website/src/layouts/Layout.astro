---
import Navbar from "../components/Navbar.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Freya is a Rust library to build Native GUI apps.">
		<meta property="og:image" content="/preview.png"/>
		<meta property="og:image:width" content="1280" />
		<meta property="og:image:height" content="640"/>
		<meta property="og:url" content="freyaui.dev/"/>
		<meta property="og:type" content="website"/> 
		<meta property="og:title" content="Freya GUI Library for Rust"/>
		<title>{title}</title>
	</head>
	<body>
		<main class="mx-auto px-4 lg:p-0 lg:w-content text-white">
			<Navbar/>
			<slot />
		</main>
	</body>
</html>
<style is:global>
	html {
		font-family: "Inter", system-ui, sans-serif;
		background-color: #18181b;
	}

	body {
		margin: 0;
		padding: 0;
		margin-bottom: 20px;
	}
	
	* {
		scroll-behavior: smooth;
	}

	*::-webkit-scrollbar {
		width: 10px;
	}

	*::-webkit-scrollbar-track {
		background-color: rgb(59, 59, 59);
	}

	*::-webkit-scrollbar-thumb {
		background-color: rgba(0, 0, 0, 0.4);
	}
	pre {
		margin: 0;
	}

	main {
		margin: 0 auto;
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}

	pre {
        line-height: 1.3;
        background: #131315 !important;
    }
</style>
